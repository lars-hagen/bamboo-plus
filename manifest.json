{
  "manifest_version": 3,
  "name": "Bamboo Plus",
  "version": "0.4",
  "description": "Enhanced BambooHR experience with improved UI and smart features",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.github.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bamboohr.com/employees/timesheet/*"],
      "js": ["bamboo-plus.user.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 